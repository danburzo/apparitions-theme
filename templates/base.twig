{% block html_head_container %}
	{% include 'components/html-header.twig' %}
	{% block head %}
		<!-- empty your head -->
	{% endblock %}
	</head>
{% endblock %}

	<body class="{{body_class}} grid grid--collapsable">

		<header class="grid__column">
			<div class='grid__box'>
				{% block header %}
					{% include 'components/header.twig' %}
				{% endblock %}
			</div>
		</header>

		<div class='grid__column grid__column--span-4'>
			<div class='grid grid--collapsable'>

				<div class='grid__column grid__column--span-3'>
					<div class='grid__box'>
						{% include 'components/hero.twig' %}
					</div>
				</div>

				<div class='grid__column'>
					<div class='grid__box'>
						<img class='biennale-logo' width='108' height='100' src='{{site.theme.link}}/static/svg/logos/biennale.svg'/>
					</div>
				</div>
			</div>

			<section role="main" class='grid__box'>
				{% block title %}
					{% if title %}
						<h1>{{title}}</h1>
					{% endif %}
				{% endblock title %}
				<div class="main-content">
					{% block content %}
						<!-- Content goes here -->
					{% endblock %}
				</div>
			</section>

			<div class='grid__box'>
				{% block footer %}
					{% include 'components/footer.twig' %}
				{% endblock %}
			</div>
		</div>
	</body>
</html>
