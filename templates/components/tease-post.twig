{% extends "components/tease.twig" %}

{% block content %}
	<div class='grid'>
		<div class='grid__column grid__column--span-3'>
			<h2>
				<a href="{{post.link}}">{{post.title}}</a>
			</h2>
			<p>{{ post.get_preview(50) }}</p>
		</div>
		<div class='grid__column'>
			{% if post.thumbnail.src %}
				<img src="{{post.thumbnail.src}}" />
			{% endif %}
		</div>
	</div>
{% endblock %}