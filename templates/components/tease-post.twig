{% extends "components/tease.twig" %}

{% block content %}
	<div class='tease--post'>
		<div class='tease__date text--onum'>
			{{ post.post_date | date('d.m.y') }}
		</div>
		<div class='grid'>
			<div class='grid__column grid__column--span-2'>
				<div class='grid__box'>
					{% 
						include 'components/masthead-post.twig' with {
							'tease': true
						} 
					%}
					<div>
						{{ post.get_preview(50, false, '') }}
					</div>
				</div>
			</div>
			<div class='grid__column'>
				<div class="grid__box">
					{% if post.get_field('image') %}
						{% include 'components/featured-image-compact.twig' %}
					{% endif %}
				</div>
			</div>
		</div>
	</div>
{% endblock %}