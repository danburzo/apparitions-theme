{% extends "base.twig" %}

{% block content %}
	<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
		<h1>{{post.title}}</h1>
        <p>
            <span>By</span>
            <a href="{{post.author.path}}"> {{ post.author.name }} </a> &bull; 
            {{ post.post_date|date}}
        </p>
        {{post.content}}
	</article>
{% endblock %}